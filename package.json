{
  "name": "graphql",
  "description": "GraphQL API built with Nexus and Prisma",
  "repository": "github:pokernook/graphql",
  "scripts": {
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev --preview-feature",
    "prisma:migrate:reset": "prisma migrate reset --preview-feature",
    "prisma:migrate:deploy": "prisma migrate deploy --preview-feature",
    "prisma:db:push": "prisma db push --preview-feature",
    "prisma:db:seed": "prisma db seed --preview-feature",
    "nexus:reflect": "ts-node --transpile-only src/schema",
    "generate": "npm run prisma:generate && npm run nexus:reflect",
    "dev:prisma": "nodemon --watch prisma --ext \"*\" --exec \"npm run prisma:migrate:dev && npm run prisma:db:seed\"",
    "dev:server": "ts-node-dev --exit-child --respawn --transpile-only src",
    "dev:typecheck": "tsc --noEmit --watch --preserveWatchOutput",
    "dev": "dotenv -- concurrently --kill-others npm:dev:*",
    "lint": "eslint . --ext .js,.ts",
    "build": "npm run generate && tsc"
  },
  "dependencies": {
    "@prisma/client": "^2.16.0",
    "argon2": "^0.27.0",
    "emoji-regex": "^9.2.1",
    "fastify": "^3.12.0",
    "fastify-cookie": "^5.1.0",
    "fastify-helmet": "^5.2.0",
    "fastify-redis": "^4.1.0",
    "fastify-session": "^5.2.1",
    "graphql": "^15.4.0",
    "graphql-scalars": "^1.8.0",
    "mercurius": "^7.0.0",
    "mqemitter-redis": "^4.1.0",
    "nexus": "^1.0.0",
    "nexus-plugin-prisma": "^0.31.0",
    "nexus-shield": "^2.0.0",
    "nexus-validate": "^1.0.0",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "@types/ioredis": "^4.19.4",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "concurrently": "^6.0.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.1.2",
    "prisma": "^2.16.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.1.0",
    "typescript": "^4.1.0"
  }
}
