{
  "name": "graph",
  "description": "GraphQL, Nexus Schema & Prisma",
  "repository": "github:pokernook/graph",
  "version": "0.0.0",
  "scripts": {
    "dev:prisma": "prisma generate --watch",
    "dev:server": "ts-node-dev --transpile-only --no-notify api",
    "dev:typecheck": "tsc --noEmit --watch",
    "dev": "dotenv -e prisma/.env -- concurrently --kill-others npm:dev:*",
    "nexus:reflect": "ts-node --transpile-only api/server/schema",
    "build": "npm run nexus:reflect && tsc",
    "db:migrate:save": "prisma migrate save --experimental",
    "db:migrate:up": "prisma migrate up --experimental",
    "db:seed": "ts-node prisma/seeds/seed",
    "db:up": "docker-compose up -d && npm run db:migrate:up && npm run db:seed",
    "db:down": "docker-compose down"
  },
  "dependencies": {
    "@nexus/schema": "^0.16.0",
    "@prisma/client": "2.9.0",
    "apollo-server-express": "^2.18.2",
    "argon2": "^0.27.0",
    "env-var": "^6.3.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "jsonwebtoken": "^8.5.1",
    "nexus-plugin-prisma": "^0.22.0"
  },
  "devDependencies": {
    "@prisma/cli": "2.9.0",
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "concurrently": "^5.3.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3"
  }
}
