{
  "name": "graph",
  "description": "GraphQL, Nexus Schema & Prisma",
  "repository": "github:pokernook/graph",
  "version": "0.0.0",
  "scripts": {
    "dev:prisma": "nodemon --watch \"prisma/schema.prisma\" --exec \"npm run db:push\"",
    "dev:server": "ts-node-dev --transpile-only --no-notify api",
    "dev:typecheck": "tsc --noEmit --watch --preserveWatchOutput",
    "dev": "dotenv -e prisma/.env -- concurrently --kill-others npm:dev:*",
    "nexus:reflect": "prisma generate && ts-node --transpile-only api/server/schema",
    "build": "npm run nexus:reflect && tsc",
    "db:migrate:save": "prisma migrate save --experimental",
    "db:migrate:up": "prisma migrate up --experimental",
    "db:push": "prisma db push --preview-feature --ignore-migrations --force",
    "db:seed": "ts-node prisma/seeds/seed",
    "db:up": "npm run db:migrate:up && npm run db:seed"
  },
  "dependencies": {
    "@nexus/schema": "^0.17.0",
    "@prisma/client": "^2.10.0",
    "apollo-server-express": "^2.18.2",
    "argon2": "^0.27.0",
    "env-var": "^6.3.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "jsonwebtoken": "^8.5.1",
    "nexus-plugin-prisma": "^0.23.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.10.0",
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "concurrently": "^5.3.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5"
  }
}
