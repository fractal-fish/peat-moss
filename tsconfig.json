{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "rootDir": ".",
    "noEmit": true,
    "plugins": [{ "name": "nexus/typescript-language-service" }],
    "typeRoots": ["node_modules/@types", "types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["types.d.ts", "."]
}
